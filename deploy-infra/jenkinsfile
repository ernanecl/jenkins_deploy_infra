pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                // Get some code from a GitHub repository
                git url: 'https://github.com/ernanecl/jenkins', branch: 'main'
                
                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Build EC2') {
            steps {
                sh "jenkins_deploy_infra/deploy-infra/deploy.sh"
            }
        }
        stage('Test Nginx') {
            steps {
                sh "jenkins_deploy_infra/deploy-infra/test.sh"
            }
        }
        stage('Build AMI') {
            steps {
                sh "jenkins_deploy_infra/deploy-infra/package-ami.sh"
            }
        }
        stage('Destroy Test EC2') {
            steps {
                sh "jenkins_deploy_infra/deploy-infra/destroy.sh"
            }
        }
    }
}

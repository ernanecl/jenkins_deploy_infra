pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git url: 'https://github.com/ernanecl/jenkins', branch: 'main'
                
                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
    }
    stage('Build EC2') {
        steps {
            sh "jenkins/deploy-infra/deploy.sh"
        }
    }
    stage('Test Nginx') {
        steps {
            sh "jenkins/deploy-infra/test.sh"
        }
    }
    stage('Build AMI') {
        steps {
            sh "jenkins/deploy-infra/package-ami.sh"
        }
    }
    stage('Destroy Test EC2') {
        steps {
            sh "jenkins/deploy-infra/destroy.sh"
        }
    }
}
